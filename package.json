{
  "name": "npm-install-after-git-merge-or-rebase",
  "version": "1.0.0",
  "description": "This repository is an example of an npm project with recommendation to run npm install (or yarn) after git merge (as part of git pull) or git rebase",
  "author": "Tom Herman",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TomHerman11/npm-install-after-git-merge-or-rebase.git"
  },
  "bugs": {
    "url": "https://github.com/TomHerman11/npm-install-after-git-merge-or-rebase/issues"
  },
  "homepage": "https://github.com/TomHerman11/npm-install-after-git-merge-or-rebase#readme",
  "main": "index.js",
  "scripts": {},
  "devDependencies": {
    "git-clone-and-launch-vscode": "^1.0.4",
    "husky": "^4.3.6"
  },
  "husky": {
    "hooks": {
      "post-checkout": "./githooks/npm/post-checkout.sh $HUSKY_GIT_PARAMS",
      "post-merge": "./githooks/npm/post-merge.sh"
    }
  }
}